filter_items() {
  visible_items=()
  for item in "${all_items[@]}"; do
    if [[ "${item,,}" == *"${search_string,,}"* ]]; then
      visible_items+=("$item")
    fi
  done
}

is_selected() {
  local check="$1"
  for s in "${selected_items[@]}"; do
    [[ "$s" == "$check" ]] && return 0
  done
  return 1
}

filter_items

draw_menu() {
  clear
  echo -e "\033[8G\033[1;37mSearch:\033[26G\033[34m [$search_string]"
  echo -e "\033[8G\033[1;37mSelected:\033[26G\033[34m ${#selected_items[@]}\033[37m item(s)\033[0m"
  echo
  local start=$offset
  local end=$(( offset + max_visible ))
  for i in "${!visible_items[@]}"; do
    (( i < start || i >= end )) && continue
    local prefix="  "
    local marker="   "
    (( i == selected )) && prefix="▶ "

    if is_selected "${visible_items[i]}"; then
      marker="\033[32m[\033[33m*\033[32m]\033[0m"
    fi

    printf "%s%s %s\n" "$prefix" "$marker" "${visible_items[i]}"
  done
}

while true; do
  draw_menu
  IFS= read -rsn1 key

  if [[ $key == $'\x1b' ]]; then
    read -rsn2 rest
    key+="$rest"
    case "$key" in
      $'\x1b[A') (( selected > 0 )) && ((selected--)) ;;
      $'\x1b[B') (( selected < ${#visible_items[@]} - 1 )) && ((selected++)) ;;
    esac
  elif [[ $key == $'\x7f' ]]; then
    search_string="${search_string::-1}"
    filter_items
    selected=0
    offset=0
  elif [[ "$key" =~ [a-zA-Z] ]]; then
    search_string+="$key"
    filter_items
    selected=0
    offset=0
    elif [[ -z $key ]]; then
    
      if [[ -z $search_string ]]; then
      break
    fi
    current="${visible_items[selected]}"
    is_selected "$current" || selected_items+=("$current")
  fi

  (( selected < offset )) && offset=$selected
  (( selected >= offset + max_visible )) && offset=$(( selected - max_visible + 1 ))
done

# Final result
echo "You selected:"
clear
COUNN="2"
for item in "${selected_items[@]}"; do
  tput cup $(( $COUNN + 1 )) 26;echo -e "\033[31m$item\033[0m"
  ((COUNN++))
done

  for item in "${selected_items[@]}"; do
  #echo "- $item"
  # your-command "$item"
  xxx=$(find /media/batan/100/Music -maxdepth 3 -type f -name "*.mp3"|grep "$item")
  lcplay $xxx


done

