all_items=($(find /media/batan/100/Music/ -maxdepth 3 -type f -name "*.mp3"|sed 's/ /_/g'|rev|sed 's/[/].*$//g'|rev|sed 's/.mp3//g'))
search_string=""
selected=0
offset=0
max_visible=10
selected_items=()

